<Attrs>
    <Attr label="Name" name="name">
        <Type>
            <String defaultValue="AAAA" validator="[a-zA-Z0-9_]+"/>
        </Type>
        <Scopes/>
    </Attr>
    <Attr label="Implementation language" name="language">
        <Scopes>
            <Function/>
        </Scopes>
        <Type>
            <Enumeration defaultValue="SDL">
                <Entry value="Ada"/>
                <Entry value="CPP"/>
                <Entry value="C"/>
                <Entry value="GUI"/>
                <Entry value="SDL"/>
                <Entry value="Simulink"/>
                <Entry value="Blackbox_Device"/>
                <Entry value="VHDL"/>
            </Enumeration>
        </Type>
    </Attr>
    <Attr label="Function Type" name="is_type">
        <Type>
            <Enumeration>
                <Entry value="YES"/>
                <Entry value="NO"/>
            </Enumeration>
        </Type>
        <Scopes>
            <Function/>
        </Scopes>
    </Attr>
    <Attr label="Instance of" name="instance_of">
        <Type>
            <String validator="[a-zA-Z0-9_]+"/>
        </Type>
        <Scopes>
            <Function>
                <AttrValidator name="is_type" value="False"/>
            </Function>
        </Scopes>
    </Attr>
    <Attr label="Kind" name="kind">
        <Scopes>
            <Required_Interface/>
            <Provided_Interface/>
        </Scopes>
        <Type>
            <Enumeration>
                <Entry value="Cyclic"/>
                <Entry value="Sporadic"/>
                <Entry value="Protected"/>
                <Entry value="Unprotected"/>
            </Enumeration>
        </Type>
    </Attr>
    <Attr label="Period (in ms)" name="period">
        <Type>
            <String validator="\d+"/>
        </Type>
        <Scopes>
            <Provided_Interface>
                <AttrValidator name="kind" value="Cyclic"/>
            </Provided_Interface>
        </Scopes>
    </Attr>
    <Attr label="Minimal inter-arrival time (in ms)" name="miat">
        <Type>
            <String validator="\d+"/>
        </Type>
        <Scopes>
            <Provided_Interface>
                <AttrValidator name="kind" value="Sporadic"/>
            </Provided_Interface>
        </Scopes>
    </Attr>
    <Attr label="Worse case execution time (in ms)" name="wcet">
        <Type>
            <String validator="\d+"/>
        </Type>
        <Scopes>
             <Provided_Interface>
                <AttrValidator name="kind" value="Cyclic"/>
                <AttrValidator name="kind" value="Sporadic"/>
                <AttrValidator name="kind" value="Protected"/>
                <AttrValidator name="kind" value="Unprotected"/>
            </Provided_Interface>
        </Scopes>
    </Attr>
    <Attr label="Message queue size" name="queue_size">
        <Type>
            <String validator="\d+"/>
        </Type>
        <Scopes>
            <Provided_Interface>
                <AttrValidator name="kind" value="Sporadic"/>
            </Provided_Interface>
        </Scopes>
    </Attr>
    <Attr name="Taste::coordinates" type="property" visible="false">
        <Type>
            <String validator="[0-9 ]+"/>
        </Type>
        <Scopes/>
    </Attr>
    <Attr name="Taste::InnerCoordinates" type="property" visible="false">
        <Type>
            <String validator="[0-9 ]+"/>
        </Type>
        <Scopes/>
    </Attr>
    <Attr label="SomeLabel" name="Taste::RootCoordinates" type="property" visible="false">
        <Type>
            <String validator="[0-9 ]+"/>
        </Type>
        <Scopes>
            <Function/>
        </Scopes>
    </Attr>
    <Attr name="Taste::InheritPI" type="property">
        <Type>
            <Boolean/>
        </Type>
        <Scopes>
            <Required_Interface/>
        </Scopes>
    </Attr>
    <Attr name="Taste::Autonamed" type="property">
        <Type>
            <Boolean/>
        </Type>
        <Scopes>
            <Required_Interface/>
        </Scopes>
    </Attr>
</Attrs>
